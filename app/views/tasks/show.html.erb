<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= @task.completed ? "This task is completed" : "This task is not completed" %></p>
<p><%= link_to 'Edit this task', edit_task_path %></p>
<p><%= link_to 'Back to list', tasks_path %></p>
<p><%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%></p>
